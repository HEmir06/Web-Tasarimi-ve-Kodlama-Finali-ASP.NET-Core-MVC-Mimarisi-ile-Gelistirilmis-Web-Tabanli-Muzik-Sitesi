@model List<Music.Models.Song>

@{
    var likedSongIds = ViewBag.LikedSongIds as List<int> ?? new List<int>();
}

@if (!Model.Any())
{
    <div class="col-12 text-center py-5">
        <h3 class="text-muted">Sonuç Bulunamadı 😕</h3>
    </div>
}
else
{
    @foreach (var song in Model)
    {
        <div class="col-md-4 mb-4 animate__animated animate__fadeIn">
            <div class="card card-3d-effect shadow-sm h-100 border-0 rounded-4" style="overflow: hidden;">

                <div class="position-relative">
                    @if (!string.IsNullOrEmpty(song.ImageUrl))
                    {
                        <img src="@song.ImageUrl" class="w-100" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-dark text-white d-flex align-items-center justify-content-center" style="height: 250px;">
                            <span style="font-size: 3rem;">🎵</span>
                        </div>
                    }

                    <div class="position-absolute top-50 start-50 translate-middle">
                        <button class="btn p-0 border-0"
                                onclick="playGlobalMusic('@song.AudioUrl',
                                                                 '@song.Title.Replace("'", "\\'")',
                                                                 '@song.Artist.Replace("'", "\\'")',
                                                                 '@song.ImageUrl',
                                                                 @song.Id)"
                                style="background: transparent;">
                            <i class="bi bi-play-fill" style="font-size: 5rem; color: #ffc107; filter: drop-shadow(0 4px 6px rgba(0,0,0,0.5));"></i>
                        </button>
                    </div>

                    <div class="position-absolute top-0 end-0 m-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var isLiked = likedSongIds.Contains(song.Id);
                            <form asp-controller="Favorites" asp-action="ToggleLike" method="post">
                                <input type="hidden" name="songId" value="@song.Id" />
                                <button type="submit" class="btn btn-light rounded-circle shadow-sm d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                    <i class="bi @(isLiked ? "bi-heart-fill text-danger" : "bi-heart text-dark")"></i>
                                </button>
                            </form>
                        }
                    </div>
                </div>

                <div class="card-body text-center pt-4">
                    <h5 class="fw-bold text-dark text-truncate">@song.Title</h5>
                    <p class="text-muted small">@song.Artist</p>

                    <div class="d-flex justify-content-center gap-3 mb-3 text-secondary small">
                        <span><i class="bi bi-headphones"></i> @song.PlayCount</span>
                        <span><i class="bi bi-chat-dots"></i> @(song.Comments?.Count ?? 0)</span>
                    </div>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Playlists" asp-action="SelectPlaylist" asp-route-songId="@song.Id"
                           class="btn btn-outline-dark btn-sm rounded-pill w-100 mb-3">
                            <i class="bi bi-music-note-list"></i> Listeye Ekle
                        </a>
                    }

                    <button class="btn btn-light btn-sm w-100 text-muted border-0" type="button" data-bs-toggle="collapse" data-bs-target="#comments-@song.Id">
                        Yorumları Göster ▼
                    </button>

                    <div class="collapse mt-2 text-start" id="comments-@song.Id">
                        <div class="bg-light p-3 rounded-3 mb-2" style="max-height: 150px; overflow-y: auto;">
                            @if (song.Comments != null && song.Comments.Any())
                            {
                                @foreach (var comment in song.Comments.OrderByDescending(c => c.CreatedDate))
                                {
                                    <div class="d-flex mb-2 border-bottom pb-1">
                                        <img src="https://ui-avatars.com/api/?name=@comment.AppUser?.UserName&background=random&size=25" class="rounded-circle me-2" width="25" height="25">
                                        <div>
                                            <strong class="text-dark d-block" style="font-size: 0.8rem;">@comment.AppUser?.UserName</strong>
                                            <span class="text-secondary small">@comment.Content</span>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted small text-center">İlk yorumu sen yaz!</p>
                            }
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Comments" asp-action="AddComment" method="post" class="d-flex">
                                <input type="hidden" name="songId" value="@song.Id" />
                                <input type="text" name="content" class="form-control form-control-sm me-1" placeholder="Yorum..." required>
                                <button class="btn btn-warning btn-sm text-white" type="submit">🚀</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
