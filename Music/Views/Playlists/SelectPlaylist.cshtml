@model List<Music.Models.Playlist>

@{
    ViewData["Title"] = "Listeye Ekle";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .playlist-item {
        transition: all 0.2s ease;
        border: none;
        border-bottom: 1px solid #f0f0f0;
        cursor: pointer;
    }

        .playlist-item:hover {
            background-color: #f1f3f5;
            transform: scale(1.01);
        }

    .playlist-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        border-radius: 4px;
        margin-right: 15px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-white border-0 pt-4 pb-2 text-center">
                    <h5 class="fw-bold text-dark mb-0">Listeye Ekle</h5>
                    <small class="text-muted">Bir çalma listesi seçin</small>
                </div>

                <div class="card-body p-0">
                    <div class="list-group list-group-flush">

                        @if (!Model.Any())
                        {
                            <div class="text-center p-5">
                                <div class="mb-3 text-muted" style="font-size: 2rem;">📂</div>
                                <p class="text-muted mb-3">Henüz bir listen yok.</p>
                                <a href="/Playlists/Create" class="btn btn-sm btn-dark rounded-pill px-4">Yeni Oluştur</a>
                            </div>
                        }
                        else
                        {
                            @foreach (var playlist in Model)
                            {
                                <div class="list-group-item playlist-item d-flex align-items-center p-3">
                                    <div class="playlist-icon shadow-sm">🎵</div>

                                    <div class="flex-grow-1">
                                        <h6 class="mb-0 fw-bold text-dark">@playlist.Name</h6>
                                        <small class="text-muted" style="font-size: 0.8rem;">
                                            @(playlist.Songs?.Count ?? 0) Şarkı
                                        </small>
                                    </div>

                                    <form asp-action="AddSongToPlaylist" method="post" class="m-0">
                                        <input type="hidden" name="playlistId" value="@playlist.Id" />
                                        <input type="hidden" name="songId" value="@ViewBag.SelectedSongId" />

                                        <button type="submit" class="btn btn-outline-success btn-sm rounded-pill px-3 fw-bold">
                                            Ekle
                                        </button>
                                    </form>
                                </div>
                            }
                        }
                    </div>
                </div>

                <div class="card-footer bg-white border-0 text-center py-3">
                    <a href="/" class="text-decoration-none text-secondary small fw-bold">VAZGEÇ</a>
                </div>
            </div>

        </div>
    </div>
</div>