@model Music.Models.Playlist

@{
    ViewData["Title"] = "Liste Detayı";
}

<div class="container mt-4">

    <div class="d-flex align-items-center justify-content-between mb-4 animate__animated animate__fadeInDown">
        <div>
            <h1 class="fw-bold gradient-text mb-1">
                <i class="bi bi-music-note-list"></i> @Model.Name
            </h1>
            <p class="text-muted mb-0">
                Bu listede <strong>@(Model.Songs != null ? Model.Songs.Count : 0)</strong> şarkı var.
            </p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning text-dark fw-bold rounded-pill shadow-sm">
                <i class="bi bi-plus-lg"></i> Şarkı Ekle
            </a>
            <a asp-action="Index" class="btn btn-secondary rounded-pill shadow-sm">
                Geri Dön
            </a>
        </div>
    </div>

    @if (Model.Songs != null && Model.Songs.Any())
    {
        <div class="list-group shadow-sm rounded-4 overflow-hidden">
            @foreach (var song in Model.Songs)
            {
                <div class="list-group-item d-flex align-items-center justify-content-between p-3 border-bottom song-row"
                     style="background-color: #ffffff;">

                    <div class="d-flex align-items-center gap-3" style="width: 40%;">
                        @if (!string.IsNullOrEmpty(song.ImageUrl))
                        {
                            <img src="@song.ImageUrl" class="rounded-3 shadow-sm" style="width: 60px; height: 60px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-secondary rounded-3 d-flex align-items-center justify-content-center text-white" style="width: 60px; height: 60px;">
                                <i class="bi bi-music-note"></i>
                            </div>
                        }

                        <div>
                            <h6 class="mb-1 fw-bold text-black-force">@song.Title</h6>
                            <span class="badge bg-light text-dark border">@song.Artist</span>
                        </div>
                    </div>

                    <div style="width: 40%;">
                        <audio controls class="w-100" style="height: 40px; border-radius: 20px;">
                            <source src="@song.AudioUrl" type="audio/mpeg">
                        </audio>
                    </div>

                    <div class="d-flex align-items-center justify-content-center" style="width: 10%;">
                        <form asp-action="RemoveSong" asp-route-playlistId="@Model.Id" asp-route-songId="@song.Id" method="post" id="removeSongForm-@song.Id">
                            <button type="button" onclick="confirmRemoveSong(@song.Id)" class="btn btn-outline-danger btn-sm rounded-circle"
                                    style="width: 40px; height: 40px; padding: 0; display: flex; align-items: center; justify-content: center;"
                                    title="Listeden Çıkar">
                                <i class="bi bi-trash" style="font-size: 1.1rem;"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center rounded-4 shadow-sm p-5">
            <h4>Liste Boş 😔</h4>
            <p>Bu listeye henüz hiç şarkı eklememişsin.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill">Hemen Şarkı Ekle</a>
        </div>
    }
</div>

<style>
    [data-theme="dark"] .song-row {
        background-color: #ffffff !important;
        border-color: #eee !important;
    }

    .text-black-force {
        color: #000000 !important;
    }

    [data-theme="dark"] .text-black-force {
        color: #000000 !important;
    }
</style>

<script>
    function confirmRemoveSong(songId) {
        Swal.fire({
            title: 'Şarkıyı Çıkar?',
            text: "Bu şarkı listeden kaldırılacak.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Çıkar!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                // Onay verilirse ilgili formu gönder
                document.getElementById('removeSongForm-' + songId).submit();
            }
        })
    }
</script>